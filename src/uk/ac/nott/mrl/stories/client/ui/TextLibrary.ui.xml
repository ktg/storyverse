<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:org.wornchaos.client.ui.layout"
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style type='uk.ac.nott.mrl.stories.client.ui.TextLibrary.Style'>
		.panel {
			position: absolute;
			left: 0px;
			top: 0px;
			bottom: 0px;
			right: 0px;
		}
		
		.prev {
			position: absolute;
			left: 0px;
			bottom: 0px;
			border: 1px solid #000;
			border-bottom: 0px;
			border-left: 0px;
			border-top-right-radius: 5px;
			padding: 5px 10px;
		}
		
		.next {
			position: absolute;
			right: 0px;
			bottom: 0px;
			border: 1px solid #000;
			border-bottom: 0px;
			border-right: 0px;
			border-top-left-radius: 5px;
			padding: 5px 10px;
		}
		
		.story {
			position: absolute;
			padding: 30px;
			background: white;
			white-space: pre-wrap;
			border: 1px solid #EEE;
			border-radius: 10px;
			box-shadow: 2px 2px 5px #888;
			font-size: 14px;
			box-sizing: border-box;
			transition: all 1s;
			-moz-transition: all 1s; /* Firefox 4 */
			-webkit-transition: all 1s; /* Safari and Chrome */
			-o-transition: all 1s; /* Opera */
		}
	</ui:style>
	<g:FlowPanel>
		<l:LayoutPanel ui:field="stories" styleName="{style.panel}" />
		<g:Button ui:field="prev" styleName="{style.prev}">Previous</g:Button>
		<g:Button ui:field="next" styleName="{style.next}">Next</g:Button>
	</g:FlowPanel>
</ui:UiBinder>
